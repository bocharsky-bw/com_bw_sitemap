<?xml version="1.0" encoding="utf-8"?>
<config>
    <fieldset name="bw_sitemap"
        label="BW Sitemap"
        description="Настройки компонента com_bw_sitemap">

        <field
            name="links_limit"
            type="text"
            filter="integer"
            label="Макс. количество ссылок"
            description="Максимальное количество отображаемых ссылок"
            default="100"
        />
    </fieldset>

    <fieldset
        name="permissions"
        label="JCONFIG_PERMISSIONS_LABEL"
        description="JCONFIG_PERMISSIONS_DESC"
        >

        <field
            name="rules"
            type="rules"
            label="JCONFIG_PERMISSIONS_LABEL"
            class="inputbox"
            filter="rules"
            validate="rules"
            component="com_banners"
            section="component" />
    </fieldset>
</config>
